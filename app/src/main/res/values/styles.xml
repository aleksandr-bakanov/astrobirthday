<resources>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary
        </item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/white2</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorOnSurface">@color/white2</item>
    </style>
</resources>