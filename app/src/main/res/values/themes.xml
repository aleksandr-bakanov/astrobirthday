<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/buttonsBlue</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/buttonsBlue</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/buttonsBlue</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="BottomNavigationTheme" parent="AppTheme" />

    <style name="SearchViewOverlay" parent="AppTheme">
        <item name="colorControlNormal">?attr/colorOnPrimarySurface</item>
        <item name="android:editTextColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textColorHint">?attr/colorOnPrimarySurface</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>
</resources>