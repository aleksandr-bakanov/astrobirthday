<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:maxAcceleration="40"
            motion:maxVelocity="20"
            motion:touchAnchorId="@+id/recycler_view"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="65"
                motion:motionTarget="@id/planet_name_collapsed" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="60"
                motion:motionTarget="@id/planet_name" />

            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="10"
                motion:motionTarget="@id/planet_name" />

            <KeyPosition
                motion:framePosition="30"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/planet_name"
                motion:percentX="0.75"
                motion:percentY="0.1" />

            <KeyPosition
                motion:framePosition="30"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/planet_name_collapsed"
                motion:percentX="0.75"
                motion:percentY="0.2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/enlarge_planet_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:alpha="1.0"
            motion:layout_constraintBottom_toBottomOf="@id/backdrop"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@id/nearest_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:alpha="1.0"
            motion:layout_constraintBottom_toBottomOf="@+id/backdrop"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:alpha="1.0"
            motion:layout_constraintBottom_toTopOf="@+id/nearest_birthday"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/planet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:scaleX="1.0"
            android:scaleY="1.0"
            motion:layout_constraintBottom_toTopOf="@+id/age"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/planet_name_collapsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@+id/age"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/backdrop" />

        <Constraint
            android:id="@id/backdrop"
            android:layout_width="0dp"
            android:layout_height="@dimen/planet_animation_height"
            motion:layout_constraintBottom_toTopOf="@id/recycler_view"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/enlarge_planet_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            android:alpha="0.0"
            motion:layout_constraintBottom_toBottomOf="@id/backdrop"
            motion:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@id/nearest_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.0"
            motion:layout_constraintBottom_toBottomOf="@+id/backdrop"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="0.0"
            motion:layout_constraintBottom_toTopOf="@id/nearest_birthday"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/planet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:alpha="0"
            android:scaleX="0.615"
            android:scaleY="0.615"
            android:translationX="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/back_button"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/back_button"
            motion:layout_constraintTop_toTopOf="@id/back_button" />

        <Constraint
            android:id="@id/planet_name_collapsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="@id/back_button"
            motion:layout_constraintEnd_toStartOf="@id/favorite_button"
            motion:layout_constraintHorizontal_bias="0"
            motion:layout_constraintStart_toEndOf="@id/back_button"
            motion:layout_constraintTop_toTopOf="@id/back_button" />

        <Constraint
            android:id="@id/recycler_view"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/backdrop" />

        <Constraint
            android:id="@id/backdrop"
            android:layout_height="?attr/actionBarSize"
            motion:layout_constraintBottom_toTopOf="@id/recycler_view"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>