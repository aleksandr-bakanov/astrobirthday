<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/backgroundDarkGrey"
                android:endColor="@color/greyStroke"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundDarkGrey" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp" />
        </shape>
    </item>

</layer-list>
